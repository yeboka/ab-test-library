{
  "name": "ab-testing-library",
  "version": "0.1.1",
  "description": "A lightweight, production-ready library for managing A/B tests with deterministic variant assignment, real-time experiment updates, and remote configuration support.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ab-testing",
    "a-b-testing",
    "experiments",
    "variant-assignment",
    "supabase",
    "analytics",
    "testing",
    "feature-flags"
  ],
  "author": "yeboka <mukanyerbolat@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeboka/ab-test-library.git",
    "directory": "packages/ab-testing-library"
  },
  "bugs": {
    "url": "https://github.com/yeboka/ab-test-library/issues"
  },
  "homepage": "https://github.com/yeboka/ab-test-library#readme",
  "peerDependencies": {
    "@supabase/supabase-js": "^2.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build && npm run test:run",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:public": "npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "jsdom": "^27.1.0",
    "tsup": "^8.2.0",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0"
  }
}
